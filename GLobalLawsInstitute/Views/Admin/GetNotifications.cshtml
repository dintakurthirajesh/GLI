
@model List<GLI.GlobalEntity.Notifications>

@{
    ViewData["Title"] = "GetNotifications";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="page-content" style="min-height:1269px">
    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-cogs"></i>Notifications
            </div>
        </div>
        <div class="portlet-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="btn-group">
                        <button id="sample_editable_1_new" class="btn blue" onclick="@("window.location.href='" + @Url.Action("Notifications", "Admin") + "'");">
                            Add New <i class="fa fa-plus"></i>
                        </button>
                    </div>
                </div>
            </div>
            <br />
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                S.No
                            </th>
                            <th>
                                Notification Title
                            </th>
                            <th>
                                From Date
                            </th>
                            <th>
                                To Date
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int rno = 1;}

                        @if (Model != null && Model.Count > 0)
                        {
                            foreach (var item in Model)
                            {
                                <tr role="row" class="odd">
                                    <td class="sorting_1">
                                        @rno
                                    </td>
                                    <td>
                                        @item.NotificationTitle
                                    </td>
                                    <td>
                                        @item.FromDate
                                    </td>
                                    <td>
                                        @item.ToDate
                                    </td>
                                    <td>
                                        @Html.ActionLink("Delete", "DeleteNotifications", "Admin", new { ID = @item.ID, Name = "Notifications" }, new { @class = "btn btn-xs red" })
                                    </td>
                                </tr>
                                rno = rno + 1;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

