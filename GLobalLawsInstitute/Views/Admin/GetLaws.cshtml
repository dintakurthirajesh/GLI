@model  List<GLI.GlobalEntity.GliLaws>

@{
    ViewData["Title"] = "GetDepartment";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="page-content" style="min-height:1269px">
    @{
        var user = (GLI.GlobalEntity.AdminMenu_DTO) Session["MennusList"];
    }
    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-cogs"></i>@user.MenuName
            </div>
        </div>
        <div class="portlet-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="btn-group">
                        <button id="sample_editable_1_new" class="btn blue" onclick="location.href='@Url.Action("GliLaws", "Admin", new { MainMenuId =user.MainMenuId,MenuName = user.MenuName,ParentId =user.ParentId,SubMenuId =user.SubMenuId })'">
                            Add New <i class="fa fa-plus"></i>
                        </button>
                    </div>
                </div>
            </div>
            <br />
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                S.No
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Description
                            </th>
                            @*<th>
                                    Action
                                </th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @{ int rno = 1; }

                        @foreach (var item in Model)
                        {
                            <tr role="row" class="odd">
                                <td class="sorting_1">
                                    @rno
                                </td>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    @Html.Raw(@item.Description)
                                </td>
                                @*<td>
                                        <a href='@("/Admin/EditArbitration?Id=" + @item.Id)' class="btn btn-xs green">Edit</a>
                                        @Html.ActionLink("Delete", "DeleteArbitration", "Admin", new { ID = @item.Id, Name = "Arbitration" }, new { @class = "btn btn-xs red" })
                                    </td>*@
                            </tr>
                            rno = rno + 1;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



