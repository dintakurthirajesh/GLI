@model  GLI.GlobalEntity.LoginDTO


@{
    Layout = null;
}

<link href="~/Content/css/bootstrap.css" rel="stylesheet" />
<link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Global Laws Institute | Forgot Password</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Content/Scripts/bootstrap.min.js"></script>
    <!-- Font Awesome -->
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
    <!-- Ionicons -->
    <link href="~/Content/css/ionicons.min.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/Content/css/AdminLTE.min.css" rel="stylesheet" />
    <!-- iCheck -->
    <link href="~/Content/plugins/iCheck/square/blue.css" rel="stylesheet" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition login-page">
    <div class="login-logo">
        <div>
            <img src="/Homeimages/Header.png" class="img-fluid">
        </div>
    </div>
    <div class="login-box">

        @using (Html.BeginForm("ForgotPassword", "Home", FormMethod.Post, new { @class = "form-horizontal form-label-left" }))
        {
            <!-- /.login-logo -->
            <div class="login-box-body" style="border-radius:10px;">
                <p class="login-box-msg"></p>

                <form action="../../index2.html" method="post">
                    <div class="form-group has-feedback">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Enter Email", @autocomplete = "off", @required = "required", @maxlength = "64" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger  " })
                        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    </div>
                    <div class="row">
                        <div class="row">
                            <div class="col-xs-8">
                                <div class="alert">

                                </div>
                            </div>

                            <!-- /.col -->
                            <div class="col-xs-4">
                                <button id="sample_editable_1_new" class="btn btn-primary btn-block btn-flat">
                                    Submit
                                </button>
                            </div>
                            <div class="col-xs-8" style="padding:10px;">
                                <label class="text-danger">@ViewData["Message"]</label>
                            </div>
                            <!-- /.col -->
                        </div>
                    </div>
                </form>
            </div>
        }
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery 3 -->
    <script src="~/Content/Scripts/jquery.min.js"></script>
    <!-- iCheck -->
    <script src="~/Content/plugins/iCheck/icheck.min.js"></script>
