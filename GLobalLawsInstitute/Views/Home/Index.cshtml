                        <li><span class="fa-li"><i class="fa fa-bell"></i> </span>Notification One</li>*@

                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <li><span class="fa-li"><i class="fa fa-bell"></i> </span>@item.NotificationTitle</li>
                        }
                    }
                </ul>
            </marquee>
        </div>
    </div>

</div>

<div class="clearfix"></div>

<div class="body-content mt-2">
    <div class="col-md-3 float-left" style="border:12px solid #ffa50082">
        <div class="social-activities">
            <h4 style="text-align:center;">Social Activities</h4>
            <marquee behavior="scroll" direction="up" onMouseOver="this.stop();" onMouseOut="this.start();">
                <ul class="fa-ul">
                    <li>Email</li>
                    <li>Facebook</li>
                    <li>Twitter</li>
                </ul>
            </marquee>
        </div>
    </div>
    <div class="col-md-9 col-sm-9 col-lg-9 float-left text-center">
        <div class="col-md-12 col-sm-12 col-lg-12">
            <div class="course-offer mb-3">
                <h3> Courses We Offer</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">

            <div class="col-md-4 float-left">
                <div class="form-group">
                    <div class="course-heading Intelectual">
                        <img src="~/Homeimages/Intelectual.png" alt="Intelectual law" />
                        <a class="nav-link" href="@Url.Action("Arbitration", "SubMenu")" target="_blank">Intelectual Property Laws</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 float-left">
                <div class="form-group">
                    <div class="course-heading cyberlaw">
                        <img src="~/Homeimages/Cyberlaw.png" alt="Cyber law" />
                        <a class="nav-link" href="@Url.Action("CopyRights", "SubMenu")" target="_blank">Cyber Laws</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 float-left">
                <div class="form-group">
                    <div class="course-heading Alternative">
                        <img src="~/Homeimages/Alternative.png" alt="Alternative" />
                        <span>
                            <a class="nav-link" href="@Url.Action("Arbitration", "SubMenu")" target="_blank">Alternative Dispute Resolution</a>
                        </span>
                    </div>
                </div>
            </div>

        </div>
        <div class="clearfix"></div>

        <div class="row">

            <div class="col-md-4 float-left">
                <div class="form-group">
                    <div class="course-heading Employment">
                        <img src="~/Homeimages/Employment.png" alt="Employment" />
                        <span>
                            <a class="nav-link" href="@Url.Action("Arbitration", "SubMenu")" target="_blank">Employement Laws</a>
                        </span>
                    </div>
                </div>
            </div>

            <div class="col-md-4 float-left">
                <div class="form-group">
                    <div class="course-heading Merger">
                        <img src="~/Homeimages/Merger.png" alt="Merger" />
                        <span>
                            <a class="nav-link" href="@Url.Action("Arbitration", "SubMenu")" target="_blank">Merger and Acquisition </a>
                        </span>
                    </div>
                </div>
            </div>

            <div class="col-md-4 float-left">
                <div class="form-group">
                    <div class="course-heading Dispute">
                        <img src="~/Homeimages/Dispute.png" alt="Dispute" />
                        <span>
                            <a class="nav-link" href="@Url.Action("Arbitration", "SubMenu")" target="_blank">Alternative Dispute Resolution </a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
