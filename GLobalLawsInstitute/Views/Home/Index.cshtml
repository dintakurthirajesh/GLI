@model  List<GLI.GlobalEntity.Notifications>
@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}
<meta name="viewport" content="width=device-width" />

<div class="row m-0">

    <div class="col-md-9 col-sm-9 col-lg-9 p-0 float-left">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">

            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/Homeimages/slide-1.jpg" alt="slide" class="img-fluid" />
                </div>

                <div class="carousel-item">
                    <img src="~/Homeimages/slide-2.jpg" alt="law" class="img-fluid" />
                </div>

            </div>
            <a class="carousel-control-prev" href="#myCarousel" data-slide="prev">
                <img src="~/Content/images/back.png" width="30px" />
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" data-slide="next">
                <span class="sr-only">Next</span>
                <img src="~/Content/images/right.png" width="30px" />
            </a>
        </div>
    </div>

    <div class="col-md-3 col-sm-3 col-lg-3 home-notifications float-left" style="border:12px solid #ffa50082">
        <div class="social-activities" style="height:100%;">
            <h4 style="text-align:center;"> Notifications</h4>
