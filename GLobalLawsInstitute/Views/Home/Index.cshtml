                {*@
            <marquee behavior="scroll" direction="up" onMouseOver="this.stop();" onMouseOut="this.start();" style="height: 80%;text-align: center;">
                <ul class="fa-ul" style="line-height:2">
                    @*<li><span class="fa-li"><i class="fa fa-bell"></i> </span>Notification One</li>
                        <li><span class="fa-li"><i class="fa fa-bell"></i> </span>Notification One</li>
                        <li><span class="fa-li"><i class="fa fa-bell"></i> </span>Notification One</li>
                        <li><span class="fa-li"><i class="fa fa-bell"></i> </span>Notification One</li>
                        <li><span class="fa-li"><i class="fa fa-bell"></i> </span>Notification One</li>
                        <li><span class="fa-li"><i class="fa fa-bell"></i> </span>Notification One</li>
                        <li><span class="fa-li"><i class="fa fa-bell"></i> </span>Notification One</li>

