@model List<GLI.GlobalEntity.ArbitrationDTO>
@{
    ViewData["Title"] = "Arbitration";
    Layout = "~/Views/Shared/SubLayout.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header text-center">
                        <h4 class="panel-title" style="background-color:darkseagreen"><b>Program Arbitration</b></h4>
                    </div>
                    <div class="accordianbody">
                        @*<div class="narrowchart">*@
                        <div id="accordion" class="col-md-12">
                            @if (Model != null && Model.Count > 0)
                            {
                                foreach (var item in Model)
                                {
                                    <div class="accordion accordianheader">
                                        <h3>
                                            @item.Title <i class="fa fa-angle-down"></i>
                                        </h3>
                                    </div>
                                    <div class="accordianbody" id="accordbody">
                                        <ul>
                                            <li>
                                                <address class="justify-content-end">@item.Description</address>
                                            </li>
                                        </ul>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="form-group">
                                    <div class="row text-center col-md-12">
                                        <label id="lblerror">No Data Found</label>
                                        @*style="background-color:aquamarine"*@
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $("#accordion").accordion({
        active: false,
        collapsible: true,
        heightStyle: "content",
        header: "div.accordianheader"
    });

</script>